<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha um nÃºmero entre 0 e 10 e aperte jogar"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/botaoJogarId"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:text="@string/botao_jogar"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/resultadoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_numero"
        android:textSize="@dimen/cabecalho_texto"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="159dp" />
</RelativeLayout>